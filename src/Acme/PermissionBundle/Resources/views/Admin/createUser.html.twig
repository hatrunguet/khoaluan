
{{ form_start(form,{'attr':{'class':'form-horizontal'}}) }}
{{ form_errors(form) }}
<div class="panel panel-primary">
    <div class="panel-heading">
        <h6 class="panel-title"><i class="icon-bubble4"></i> Tạo người dùng</h6>
    </div>
    <div class="panel-body">
        {% if alert|default is not empty %}
        <div class="alert alert-success fade in block-inner">
            <button type="button" class="close" data-dismiss="alert">×</button>
            {{alert}}
        </div>
        {% endif%}
        <div class="form-group">
            {{ form_label(form.username, null,{'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.username) }}
                {{ form_errors(form.username) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.password, null,{'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.password) }}
                {{ form_errors(form.password) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.email, null,{'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.email) }}
                {{ form_errors(form.email) }}
            </div>
        </div>
        <div class="form-group">
             {{ form_label(form.role, null,{'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.role) }}
                {{ form_errors(form.role) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.thontincanhan, null,{'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.thontincanhan) }}
                {{ form_errors(form.thontincanhan) }}
            </div>
        </div>
        <div class="form-actions text-right">
             {{ form_widget(form.submit,{'attr': {'class': 'btn btn-primary'}}) }}
        </div>
    </div>
</div>

{{form_end(form)}}